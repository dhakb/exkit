{
  "name": "exkit",
  "version": "0.0.1",
  "description": "A modular, TypeScript-based Express.js boilerplate for building scalable, maintainable, and testable APIs following clean architecture principles.",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "rm -rf dist && swc src -d dist",
    "build:dev": "rm -rf dist && swc src -w -d dist",
    "start": "node dist/src/main.js",
    "start:dev": "nodemon",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src",
    "format:lint": "biome check --write ./src"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "file-stream-rotator": "^1.0.0",
    "http-errors": "^2.0.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "@types/express": "^4.17.21",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "chokidar": "^4.0.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.8.2",
    "typescript": "^5.5.3"
  }
}
